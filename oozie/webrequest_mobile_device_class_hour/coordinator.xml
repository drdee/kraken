<coordinator-app name="webrequest_mobile_device_class_hour" xmlns="uri:oozie:coordinator:0.1"
    frequency="${coord:hours(1)}"
    start="2013-03-14T01:00Z" end="2020-01-01T23:00Z"
    timezone="Universal">
    
    <datasets>
        <dataset name="webrequest-wikipedia-mobile"
                frequency="${coord:minutes(15)}"
                initial-instance="2013-03-14T00:00Z"
                timezone="Universal">
            <uri-template>hdfs:///wmf/raw/webrequest/webrequest-wikipedia-mobile/${YEAR}-${MONTH}-${DAY}_${HOUR}.${MINUTE}.00</uri-template>
            <done-flag></done-flag>
        </dataset>
        <dataset name="webrequest_mobile_device_class"
                frequency="${coord:minutes(15)}"
                initial-instance="2013-03-14T00:00Z"
                timezone="Universal">
            <uri-template>hdfs:///wmf/data/webrequest/mobile/device_class/${YEAR}/${MONTH}/${DAY}/${HOUR}.${MINUTE}.00</uri-template>
            <done-flag></done-flag>
        </dataset>
        <!-- <dataset name="webrequest_mobile_device_class_tsv"
                frequency="${coord:minutes(15)}"
                initial-instance="2013-03-14T00:00Z"
                timezone="Universal">
            <uri-template>hdfs:///wmf/public/webrequest/mobile/device_class/${YEAR}/${MONTH}/${DAY}/webrequest_mobile_device_class-${YEAR}-${MONTH}-${DAY}_${HOUR}.${MINUTE}.00.tsv</uri-template>
            <done-flag></done-flag>
        </dataset> -->
    </datasets>
    
    <input-events>
        <data-in name="INPUT" dataset="webrequest-wikipedia-mobile">
            <start-instance>${coord:current(-5)}</start-instance>
            <end-instance>${coord:current(0)}</end-instance>
        </data-in>
    </input-events>
    
    <output-events>
        <data-out name="OUTPUT" dataset="webrequest_mobile_device_class">
            <instance>${coord:current(-4)}</instance>
        </data-out>
        <!-- <data-out name="TSV" dataset="webrequest_mobile_device_class_tsv">
            <instance>${coord:current(-4)}</instance>
        </data-out> -->
    </output-events>
    
    <action>
        <workflow>
            <app-path>${wf_application_path}</app-path>
            <configuration>
                
                <property><name>INPUT</name><value>${coord:dataIn('INPUT')}</value></property>
                <property><name>OUTPUT</name><value>${coord:dataOut('OUTPUT')}</value></property>
                <property><name>HOUR_REGEX</name><value>${coord:formatTime(coord:dateOffset(coord:nominalTime(), -1, 'HOUR'), 'yyyy-MM-dd_HH')}</value></property>
                
                <property><name>CONCAT_INPUT</name><value>${coord:dataOut('OUTPUT')}</value></property>
                <property>
                    <name>DEST</name>
                    <value>hdfs:///wmf/public/webrequest/mobile/device_class/${coord:formatTime(coord:dateOffset(coord:nominalTime(), -1, 'HOUR'), 'yyyy/MM/dd')}/webrequest_mobile_device_class-${coord:formatTime(coord:dateOffset(coord:nominalTime(), -1, 'HOUR'), 'yyyy-MM-dd_HH.mm')}.00.tsv</value>
                </property>
                <!-- <property><name>DEST</name><value>${coord.dataOut('TSV')}</value></property> -->
            </configuration>
     </workflow>
    </action>
</coordinator-app>
