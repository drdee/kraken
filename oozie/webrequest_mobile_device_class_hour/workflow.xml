<workflow-app name="webrequest_mobile_device_class_hour_workflow" xmlns="uri:oozie:workflow:0.4">
    
    <start to="webrequest_mobile_device_class_hour"/>
    
    <action name="webrequest_mobile_device_class_hour">
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <script>/libs/kraken/pig/webrequest_mobile_device_class_hour.pig</script>
            
            <argument>-p</argument>
            <argument>input=${INPUT}</argument>
            
            <argument>-p</argument>
            <argument>output=${OUTPUT}</argument>
            
            <argument>-p</argument>
            <argument>hour_regex=${HOUR_REGEX}</argument>
            
            <file>/libs/GeoIP.dat</file>
            <file>/libs/GeoIPCity.dat</file>
            <file>/libs/GeoIPRegion.dat</file>
            <file>/libs/GeoIPv6.dat</file>
        </pig>
        
        <ok to="concat"/>
        <error to="kill"/>
    </action>
    
    <action name="concat">
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <script>/libs/kraken/pig/concat_sort.pig</script>
            
            <argument>-p</argument>
            <argument>input=${CONCAT_INPUT}</argument>
            
            <argument>-p</argument>
            <argument>dest=${DEST}</argument>
        </pig>
        <ok to="end"/>
        <error to="kill"/>
    </action>
    
    <kill name="kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    
    <end name="end"/>
    
</workflow-app>
